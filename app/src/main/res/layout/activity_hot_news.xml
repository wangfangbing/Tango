<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/setItem"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#998800"
            android:gravity="center"
            android:text="setItem"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/setItems"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#998800"
            android:gravity="center"
            android:text="setItems"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/appendItem"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#998800"
            android:gravity="center"
            android:text="appendItem"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/appendItems"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#998800"
            android:gravity="center"
            android:text="appendItems"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/insertItem"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#998800"
            android:gravity="center"
            android:text="insertItem"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/insertItems"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#998800"
            android:gravity="center"
            android:text="insertItems"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/removeItem"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#998800"
            android:gravity="center"
            android:text="removeItem"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/removeItems"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#998800"
            android:gravity="center"
            android:text="removeItems"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/moveItem"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#998800"
            android:gravity="center"
            android:text="moveItem"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/append_none"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#998800"
            android:gravity="center"
            android:text="append none"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/append_failed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#998800"
            android:gravity="center"
            android:text="append failed"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>

